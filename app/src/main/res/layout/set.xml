<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/kong2"
            android:layout_width="match_parent"
            android:layout_height="4dp"

            android:background="#e0eee8"
            />


        <Button
            android:id="@+id/set_information"
            android:layout_width="423dp"
            android:layout_height="61dp"
            android:layout_below="@+id/kong2"
            android:background="#FFFFFF"
            android:text="个人资料                                                                 >"
            android:textColor="#000000" />

        <Button
            android:id="@+id/set_privacy"
            android:layout_width="423dp"
            android:layout_height="61dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/set_information"

            android:text="隐私设置                                                                 >"
            android:textColor="#000000" />

        <Button
            android:id="@+id/set_help"
            android:layout_width="423dp"
            android:layout_height="61dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/set_privacy"

            android:text="辅助功能                                                                 >"
            android:textColor="#000000" />

        <Button
            android:id="@+id/set_question"
            android:layout_width="423dp"
            android:layout_height="61dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/head_left"

            android:text="问题反馈                                                                 >"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/kong3"
            android:layout_below="@+id/set_question"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:textSize="8dp"
            android:background="#e0eee8"
            />

        <Button
            android:id="@+id/set_logout"
            android:layout_width="423dp"
            android:layout_height="61dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/kong3"

            android:text="切换登录                                                                 >"
            android:textColor="#000000" />

    </LinearLayout>


</RelativeLayout>