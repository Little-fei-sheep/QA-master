<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fadeScrollbars="true"
    tools:context=".AskingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ask_ll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <EditText
                android:id="@+id/title_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="标题"
                android:textSize="27dp"
                android:textStyle="bold"
                android:background="@drawable/input"></EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ask_ll2"
            android:layout_below="@id/ask_ll1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <EditText
                android:id="@+id/question_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入具体问题"
                android:textSize="20dp"
                android:background="@drawable/input"
                android:gravity="top|left"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ask_ll2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="right"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/count_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="IT"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="在线人数：20"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    ></TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"

                    >
                    <ImageButton
                        android:id="@+id/money_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/money"
                        android:layout_gravity="center_horizontal"

                        ></ImageButton>
                </LinearLayout>
                <TextView
                    android:id="@+id/real_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="0积分"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
            <Button
                android:id="@+id/submit_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:text="发送提问"
                android:textSize="20sp"
                android:textColor="#00ae16"></Button>
        </LinearLayout>
    </LinearLayout>






</ScrollView>